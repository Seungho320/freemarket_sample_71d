.signup-container
  = render 'header_done'
  %main.signup-main
    %section.signup-main__container.signup-main__done
      %h2.signup-main__head.signup-main__head--registration
        会員登録完了
      .signup-main__inner.signup-main__inner--registration-form
        .signup-main__content
          %p
            ありがとうございます。
            %br
            会員登録が完了しました。
          = link_to root_path, class: 'signup-main__btn-default signup-main__btn-red' do
            フリマをはじめる
= render "fixed-bar/footer"
