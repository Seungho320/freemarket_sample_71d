= render "toppage/header"
.chapter
  %section.chapter__container
    %h1.chapter__container__head 支払い方法
    .payment
      .payment__list
        .payment__list__content
          %h3.payment__list__content__sub-head クレジットカード一覧
          = image_tag 'visa.svg', width: '23', height: '17', alt: 'visa', class: 'payment__list__content__sub-head__visa'
      .card
        %form.card__content
        .card__number 
          = "**** **** **** " + @default_card_information.last4
        .card__date 
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
        = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button.card__date__delete 削除する
  .bottom-line
= render "toppage/footer"