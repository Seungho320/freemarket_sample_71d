  .index-title
    商品一覧
.index-main
  .index-items-container
    .index-items-category
      レディース新着アイテム
    .index-items-box
      %ul.item-lists
        - @items.each do |item|
          .list-item-box
            = link_to "/" ,class: "index-item-link" do
              %li.item-list
                .item-image-box  
                  = image_tag "material/pict/member_photo_noimage.png", class:"index-item-image" 
                .item-info
                  .item-name
                    = item.name
                  .item-price
                    = item.price
